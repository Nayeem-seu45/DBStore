@model Pager
@{
    var pager = Model.PagedList;
    int nextpage = pager.PageIndex + 1;
    int prevpage = pager.PageIndex - 1;
}
@if (pager.TotalPages > 0)
{
    <ul class="pagination justify-content-end" style="float:right;">
        @if (pager.PageIndex > 1)
        {
            <li class="page-item">
                <a class="page-link" href="/Customer/home/details?id=1"><i class="fas fa-backward"></i></a>
            </li>
            <li class="page-item">
                <a class="page-link" href="/Customer/Product?id=@prevpage"><i class="fas fa-arrow-left"></i></a>
            </li>
        }
        @for (var pg = pager.PreviousPage; pg <= pager.NextPage; pg++)
        {
            if (pager.PageIndex == pg)
            {
                <li class="page-item active">
                    <a class="page-link"  href="/Customer/Product/Index/?id=@pg"> @pg</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" href="/Customer/Product/Index?id=@pg"> @pg</a>
                </li>
            }
        }
        @if (pager.PageIndex < pager.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" href="/Customer/Product?id=@nextpage"><i class="fas fa-arrow-right"></i></a>
            </li>
            <li class="page-item">
                <a class="page-link" href="/Customer/Product?id=@pager.TotalPages"><i class="fas fa-forward"></i></a>
            </li>
        }
    </ul>
}
