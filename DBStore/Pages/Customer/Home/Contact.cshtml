@model DBStore.Pages.Customer.Home.ContactModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


@Html.AntiForgeryToken()
<div class="breadcrum-main section-big-py-space">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="breadcrum-contain">
                    <div>
                        <h2 align="center">Contact</h2>
                        <ul>
                            <li><a href="/Customer/Home/Index">home</a></li>
                            <li><i class="fa fa-angle-double-right"></i></li>
                            <li><a href="#">Contact</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="main_content ">


    <div class="section pb_70">
        <div class="container">
            <div class="row">

                <div class="col-xl-4 col-md-6 contactDB ">
                    <div class="contact_wrap contact_style3">
                        <div class="contact_icon">
                            <i class="fa fa-home"></i>
                        </div>
                        <div class="contact_text">
                            <span>Address</span>
                            <p>13 Number Road, Nikunja-2, Dhaka, Bangladesh</p>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-md-6 contactDB">
                    <div class="contact_wrap contact_style3">
                        <div class="contact_icon">
                            <i class="fa fa-envelope-o"></i>
                        </div>
                        <div class="contact_text">
                            <span>Email Address</span>
                            <a href="mailto:deshibipony@gamail.com">deshibipony@gmail.com </a>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-md-6 contactDB">
                    <div class="contact_wrap contact_style3">
                        <div class="contact_icon">
                            <i class="fa fa-mobile"></i>
                        </div>
                        <div class="contact_text">
                            <span>Phone</span>
                            <p>+880 1760-900694</p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- END SECTION CONTACT -->
    <!-- START SECTION CONTACT -->
    <div class="section pt-0">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="heading_s1">
                        <h2>Get In touch</h2>
                    </div>
                    @*<p class="leads">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus blandit massa enim. Nullam id varius nunc id varius nunc.</p>*@
                    <div class="field_form">
                        <form method="post" asp-action="Contact" name="enq">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            @if (Model.MassageObj.Massage.Id != 0)
                            {
                                <input type="hidden" asp-for="MassageObj.Massage.Id" />
                            }
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Your Name</label>

                                            <input id="textName" asp-for="@Model.MassageObj.Massage.YourName" type="text" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Your Mail Address</label>

                                            <input id="textEmail" asp-for="@Model.MassageObj.Massage.Email" type="email" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Your Mobile Number</label>

                                        <input id="textEmail" asp-for="@Model.MassageObj.Massage.PhoneNumber" type="tel" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Enter Mail Subject</label>

                                        <input id="textEmail" asp-for="@Model.MassageObj.Massage.Subject" type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <label asp-for="MassageObj.Massage.Message"></label>


                                        <textarea class="form-control" asp-for="MassageObj.Massage.Message" id="txtDesc" style="height:200px;"> </textarea>

                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <button type="submit" title="Submit Your Message!" class="primary-btn" id="submitButton" name="submit" value="Submit">Send Message</button>
                                </div>
                                <div class="col-md-12">
                                    <div id="alert-msg" class="alert-msg text-center"></div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-lg-6 pt-2 pt-lg-0 mt-4 mt-lg-0">
                    
                        <iframe class="w-100 img-fluid" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1840.376787515509!2d90.36457220199497!3d22.700215663466274!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3755340fe9ae3187%3A0x48fe79d857b9c8a9!2sBrown%20Compound%20Rd%2C%20Barisal!5e0!3m2!1sen!2sbd!4v1609064762719!5m2!1sen!2sbd" width="550" height="425" frameborder="0" style="border:0; touch-action:pan-x pan-y; position:absolute;" data-zoom="12" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
                   

                    

                </div>
            </div>
        </div>
    </div>

</div>



@section Scripts{

    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: "lists",
            menubar: 'file edit format'
        });

       
    </script>
}

