@page
@model DBStore.Pages.Admin.Color.UpsertModel
@{
    ViewData["Title"] = "Upsert";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<form method="post" asp-action="Upsert">
    <div class="container">
        <div class="row px-2 mx-2 backgroundWhite border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.ColorObj.Id != 0)
            {
                <input type="hidden" asp-for="ColorObj.Id" />
            }

            <div class="col-12 px-3" style="border-bottom:1px solid #325d88">

                <h2 class="text-primary">@(Model.ColorObj.Id != 0 ? "Update" : "Create")City</h2>
            </div>

            <div class="col-8 pt-3">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="ColorObj.Name"></label>

                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="ColorObj.Name" />
                        <span class="text-danger" asp-validation-for="ColorObj.Name"></span>

                    </div>
                </div>

              


                <div class="form-group row">

                    <div class="col-9 offset-3">
                        <div class="row">
                            <div class="col-6">

                                @if (Model.ColorObj.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control"> Update</button>
                                }
                                else
                                {
                                    <button type="submit" onclick="return ValidateInput()" class="btn btn-primary form-control"> Create</button>
                                }

                            </div>

                            <div class="col-6">
                                <a asp-page="./Index" class="btn btn-success form-control">Back to List</a>

                            </div>

                        </div>

                    </div>
                </div>

            </div>


        </div>

    </div>

</form>


