@page
@model DBStore.Pages.Admin.Brand.UpsertModel
@{ 
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    <div class="container">
        <div class="row px-2 mx-2 backgroundWhite border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.BrandObj.Brand.Id != 0)
            {
                <input type="hidden" asp-for="BrandObj.Brand.Id" />
            }

            <div class="col-12 px-3" style="border-bottom:1px solid #325d88">

                <h2 class="text-primary">@(Model.BrandObj.Brand.Id != 0 ? "Update" : "Create")Category</h2>
            </div>

            <div class="col-8 pt-3">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="BrandObj.Brand.Name"></label>

                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="BrandObj.Brand.Name" />
                        <span class="text-danger" asp-validation-for="BrandObj.Brand.Name"></span>

                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="BrandObj.Brand.DisplayOrder"></label>

                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="BrandObj.Brand.DisplayOrder" />
                        <span class="text-danger" asp-validation-for="BrandObj.Brand.DisplayOrder"></span>

                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="BrandObj.Brand.BrandIcon"></label>

                    </div>
                    <div class="col-9">
                        <input type="file" class="form-control" name="files" id="uploadBox" />
                    </div>
                </div>

                <div class="form-group row">

                    <div class="col-9 offset-3">
                        <div class="row">
                            <div class="col-6">

                                @if (Model.BrandObj.Brand.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control"> Update</button>
                                }
                                else
                                {
                                    <button type="submit" onclick="return ValidateInput()" class="btn btn-primary form-control"> Create</button>
                                }

                            </div>

                            <div class="col-6">
                                <a asp-page="./Index" class="btn btn-success form-control">Back to List</a>

                            </div>

                        </div>

                    </div>
                </div>

            </div>


            @if (Model.BrandObj.Brand != null)
            {
                <div class="col-4 p-4">
                    <img src="@Model.BrandObj.Brand.BrandIcon" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
                </div>
            }
        </div>

    </div>

</form>

@section Scripts{

    <script>
        
        function ValidateInput() {
            if (document.getElementById("uploadBox").value == "") {
                swal("Error", "Please Select an Image", "error")
                return false;
            }
            return true;
        };
    </script>
}